<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.internshala.connectfour.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints maxWidth="294.0" minWidth="213.0" prefWidth="230.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="26.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
        <Pane fx:id="insertedDiscsPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <VBox alignment="CENTER" style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="playerOne" maxWidth="-Infinity" prefWidth="190.0" promptText="Player One Name">
                    <VBox.margin>
                        <Insets top="35.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="playerTwo" maxWidth="-Infinity" prefWidth="190.0" promptText="Player Two Name">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin></TextField>
                <Button fx:id="setName" mnemonicParsing="false" prefWidth="190.0" text="Set Name">
                    <VBox.margin>
                        <Insets bottom="50.0" />
                    </VBox.margin></Button>
                <Label fx:id="playerNameLabel" alignment="CENTER" prefWidth="300.0" text="Player One" textFill="#f8f4f4">
                    <font>
                        <Font name="System Bold" size="29.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" prefWidth="300.0" text="Turn" textFill="#fcf9f9">
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
                <Region VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</GridPane>
